pipeline {

   agent {
        docker {
            image 'python:2.7-alpine'
        }
    }


    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                dir('vote'){
                  sh 'pip install -r requirements.txt'
                }
            }
            }

        stage('Test') {
            steps {
                echo 'Testing..'
                dir('vote'){
                  sh 'nosetests -v'
                }
            }
        }
        stage('Package') {
            steps {
                echo 'Packaging....'
                dir('vote'){
                  sh 'python'
               }
            }
        }
    }
}
